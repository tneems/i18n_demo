<%= form_for(@user, class: "form-horizontal") do |f| %>
<h2><%= t ".form_title" %></h2>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name %>
    <div class="controls">
      <%= f.text_field :name %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :email %>
    <div class="controls">
      <%= f.text_field :email %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :address1 %>
    <div class="controls">
      <%= f.text_field :address1 %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :address2 %>
    <div class="controls">
      <%= f.text_field :address2 %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :state %>
    <div class="controls">
      <%= f.select :state, User::STATES, prompt: true %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :zip_code %>
    <div class="controls">
      <%= f.text_field :zip_code %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
