<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= link_to t('.show'), user, class: "btn btn-mini" %></td>
    <td><%= link_to t('.edit'), edit_user_path(user), class: "btn btn-mini" %></td>
    <td><%= link_to t('.destroy'), user, method: :delete, class: "btn btn-mini", data: { confirm: t('.confirm_destroy') } %></td>
  </tr>
<% end %>
</table>

